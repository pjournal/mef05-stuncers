<h4 id="directors-of-international-movies">Directors of International Movies</h4>
<pre><code class="lang-{r}">df_int_plot &lt;-  int_movies %&gt;% 
  mutate(director = strsplit(as.<span class="hljs-keyword">character</span>(director), <span class="hljs-string">","</span>)) %&gt;% 
  unnest(director) %&gt;% <span class="hljs-keyword">select</span>(director) %&gt;% group_by(director = trimws(director)) %&gt;% summarise(total = n())



ggplot(df_int_plot, aes (x = <span class="hljs-keyword">reorder</span>(director, -total), y = total))+
  geom_bar(stat=<span class="hljs-string">'identity'</span>)+theme(axis.<span class="hljs-keyword">text</span>.x = element_text(<span class="hljs-keyword">angle</span>=<span class="hljs-number">45</span>))
