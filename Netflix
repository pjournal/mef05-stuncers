  unnest(cast) %&gt;% <span class="hljs-keyword">select</span>(cast) %&gt;% group_by(cast = trimws(cast)) %&gt;% summarise(total = n())%&gt;%arrange(desc(total))%&gt;%head(<span class="hljs-number">20</span>)

